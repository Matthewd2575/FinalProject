@model StockInventory

<h3>@Model.StockNumber Information</h3>

<table class="table table-hover">
    <tr class="text-center">
        <th>StockNumber</th>
        <th>VIN</th>
        <th>Year</th>
        <th>Make</th>
        <th>Model</th>
        <th>ExteriorColor</th>
        <th>InteriorColor</th>
        <th>Seats</th>
        <th>Status</th>
        <th>DaysInInventory</th>
        <th>Price</th>
        <th>CarCondition</th>
        <th>SuggestedMSRP</th>
        <th>Mileage</th>
        <th>VehicleClass</th>
        <th>DriveTrain</th>
    </tr>
    <tr class="text-center">
        <td>@Model.StockNumber</td>
        <td>@Model.VIN</td>
        <td>@Model.Year</td>
        <td>@Model.Make</td>
        <td>@Model.Model</td>
        <td>@Model.ExteriorColor</td>
        <td>@Model.InteriorColor</td>
        <td>@Model.Seats</td>
        <td>@Model.Status</td>
        <td>@Model.DaysInInventory</td>
        <td>@Model.Price</td>
        <td>@Model.CarCondition</td>
        <td>@Model.SuggestedMSRP</td>
        <td>@Model.Mileage</td>
        <td>@Model.VehicleClass</td>
        <td>@Model.DriveTrainID</td>
    </tr>

</table>
<div style="display: block">
    <a href="/Vehicle/UpdateVehicle/@Model.StockNumber">Update this Product</a>
</div>

<div style="display: block">
    @using (Html.BeginForm("DeleteProduct", "Product", "Post"))
    {
        <input type="hidden" asp-for="StockNumber" value="@Model.StockNumber" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete Vehicle From Inventory" />
    }
</div>


